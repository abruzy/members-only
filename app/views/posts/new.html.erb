<div class="container-fluid">
  <h1>Add New Post</h1>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :title %><br />
      <%= text_field_tag :title %>
    </div>
    <br>
    <div class="field">
      <%= label_tag :body %><br />
      <%= text_area_tag :body %>
    </div>
    <br>
    <div class="actions"><%= submit_tag "Create Post" %></div>
  <% end %>
</div>