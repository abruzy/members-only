<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Add New Post</h1>
      <%= form_for @post do |f| %>
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :body, "Body" %>
        <%= f.text_area :body, class: 'form-control' %>
    
        <%= f.submit "Create", class: "btn btn-primary mt-2" %>
      <% end %>
  </div>
</div>
